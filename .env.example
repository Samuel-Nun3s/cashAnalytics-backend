# Configuracoes do servidor
PORT=3000
NODE_ENV=development
HOST=localhost

# Banco de dados
DATABASE_URL=postgres://user:password@localhost:5432/cash_analytics
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=10000
DB_SSL_MODE=prefer

# JWT
JWT_SECRET=example-jwt-secret-key
JWT_REFRESH_SECRET=example-jwt-refresh-secret-key
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=cash-analytics-api
JWT_AUDIENCE=https://cash-analytics.com

# Seguranca
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

COOKIE_SAME_SITE=strict
COOKIE_DOMAIN=localhost

BCRYPT_ROUNDS=12

# API
API_VERSION=1.0.0
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=5000
